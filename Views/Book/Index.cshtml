@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Books";
}


<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-hover">
    <thead class="table-light">
        <tr class="align-middle">
            <th>
                Book Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th class="align-middle">
                <a asp-action="AddOrEdit" class="btn btn-primary">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr class="align-middle">
                <td>
					@Model.Rows[i]["Title"]
                </td>
                <td>
                    @Model.Rows[i]["Author"]
                </td>
                <td>
                    @Model.Rows[i]["Price"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["BookID"]" class="btn btn-dark ms-1">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["BookID"]" class = "btn btn-dark ms-1">Delete</a>
                </td>
            </tr>
        }          
    </tbody>
</table>
